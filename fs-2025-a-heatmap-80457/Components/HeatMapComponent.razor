@using fs_2025_a_heatmap_80457.Components.Data

@if (DataPoints != null && DataPoints.Any())
{
    <table class="heatmap-table">
        <thead>
            <tr>
                <th>Label</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in DataPoints)
            {
                <tr>
                    <td>@item.Label</td>
                    <td class="heatmap-@item.Value">@item.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data to display</p>
}

@code {
    [Parameter]
    public List<HeatMapDataPoint> DataPoints { get; set; } = new();
}
