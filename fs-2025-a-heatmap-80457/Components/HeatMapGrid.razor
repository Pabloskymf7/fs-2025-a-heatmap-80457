@using fs_2025_a_heatmap_80457.Components.Data

@if (DataPointsGrid != null && DataPointsGrid.Any())
{
    <table class="heatmap-table">
        <thead>
            <tr>
                <th>Day / Week</th>
                @foreach (var week in Weeks)
                {
                    <th>W@week</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var day in Days)
            {
                <tr>
                    <td>@day</td>
                    @foreach (var week in Weeks)
                    {
                        var point = DataPointsGrid.FirstOrDefault(p => p.Day == day && p.Week == week);
                        <td class="heatmap-@(point?.Value ?? 0)" title="@(point?.Value ?? 0)">
                            @(point?.Value ?? 0)
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data to display</p>
}

@code {
    [Parameter] public List<HeatMapDataPoint> DataPointsGrid { get; set; } = new();

    // Optional: generate unique weeks and days
    private List<int> Weeks => DataPointsGrid.Select(p => p.Week).Distinct().OrderBy(w => w).ToList();
    private List<string> Days => DataPointsGrid.Select(p => p.Day).Distinct().ToList();
}
