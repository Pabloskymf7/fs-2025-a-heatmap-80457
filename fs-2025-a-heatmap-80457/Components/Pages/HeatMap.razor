@page "/heatmap"
@using fs_2025_a_heatmap_80457.Components
@using fs_2025_a_heatmap_80457.Components.Data

<h3>Heatmap Demo: Days × Weeks</h3>

<HeatMapGrid DataPointsGrid="@heatmapData" />

@code {
    private List<HeatMapDataPoint> heatmapData = new();
    private string[] days = new[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" };
    private int weeksCount = 5; // 5 weeks demo

    protected override void OnInitialized()
    {
        var rnd = new Random();
        foreach (var day in days)
        {
            for (int w = 1; w <= weeksCount; w++)
            {
                heatmapData.Add(new HeatMapDataPoint
                {
                    Day = day,
                    Week = w,
                    Value = new[] { 0, 5, 10, 15, 20 }[rnd.Next(5)]
                });
            }
        }
    }
}
