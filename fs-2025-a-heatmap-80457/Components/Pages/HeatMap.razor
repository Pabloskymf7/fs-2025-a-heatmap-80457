@page "/heatmap"
@using fs_2025_a_heatmap_80457.Components
@using fs_2025_a_heatmap_80457.Components.Data

<PageTitle>Heatmap Demo</PageTitle>

<h3>Heatmap Demo Page</h3>

<HeatMapGrid DataPointsGrid="@heatmapDataGrid" />

@code {
    private List<List<HeatMapDataPoint>> heatmapDataGrid = new();

    protected override void OnInitialized()
    {
        var random = new Random();
        for (int row = 0; row < 4; row++) // 4 rows
        {
            var rowData = new List<HeatMapDataPoint>();
            for (int col = 0; col < 5; col++) // 5 columns
            {
                rowData.Add(new HeatMapDataPoint
                {
                    Label = $"R{row + 1}C{col + 1}",
                    Value = new[] { 0, 5, 10, 15, 20 }[random.Next(5)]
                });
            }
            heatmapDataGrid.Add(rowData);
        }
    }
}

